- @page_title = @page.seo_title
- @page_description = @page.description

.masthead
  %nav{class: "breadcrumbs breadcrumbs--inverse", "aria-label" => "Breadcrumbs"}
    %ol{itemscope: "", itemtype: "http://schema.org/BreadcrumbList"}
      %li{class: "breadcrumbs__item", itemprop: "itemListElement", itemscope: "", itemtype: "http://schema.org/ListItem"}
        = link_to "https://www.gov.uk/service-toolkit#components", itemprop: "item" do
          %span{itemprop: "name"} Components
      %li{class: "breadcrumbs__item breadcrumbs__item--active", itemprop: "itemListElement", itemscope: "", itemtype: "http://schema.org/ListItem"}
        %a{href: "#main", itemprop: "item"}
          %span{itemprop: "name"} Registers

  .hero.hero--breaded
    .hero__content
      .hero__body
        %h1.hero__title Build services using accurate and up-to-date data
        .hero__inline-image
          = image_tag "registers-top-image.png", role: "presentation"
        %p.hero__description
          Use registers to build your service and get access to current and reliable data.
      .hero__aside-image
        = image_tag "registers-top-image.png", role: "presentation"

.container
  .grid-row
    .column-two-thirds
      %section.content-section
        .govspeak
          = govspeak(@page.content(:text))
    .column-one-third
      %aside.related-items
        %h2.related-items__title Registers you can use
        %ul.related-items__list
          %li
            = link_to "Country register", "https://country.register.gov.uk/"
          %li
            = link_to "Territory register", "https://territory.register.gov.uk/"
          %li
            = link_to "Local authority England register", "https://local-authority-eng.register.gov.uk/"
          %li
            = link_to "Local authority type register", "https://local-authority-type.register.gov.uk/"
        %h2.related-items__title Upcoming registers
        %ul.related-items__list
          %li
            = link_to "View all registers in progress", spina.registers_path
